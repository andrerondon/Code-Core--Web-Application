<div class="shadow-sm p-3 mb-5 bg-white rounded">
  <div class="form-group">
    <label for="title">Title</label>
    <input type="text" name="title" class="form-control" value="<%= locals.event ? event.title : '' %>">
  </div>
  <div class="form-group">
    <label for="description">Description</label>
    <textarea type="text" name="description" class="form-control"><%= locals.event ? event.description : '' %></textarea>
  </div>
  <input type="submit" class="btn btn-primary">
</div>